---
layout: default.njk
---

<div class="jumbotron">
  <div class="visual">
    <div class="container-wrap">
      <div class="container">
        <div class="row logos">
          <div id="logo-vub" class="col-sm-4 jumbotron-logo"></div>
          <div id="logo-wise" class="col-sm-4 jumbotron-logo"></div>
          <div id="logo-openhps" class="col-sm-4 jumbotron-logo"></div>
        </div>
        <h1 class="body">
          OpenHPS - An Open Source Hybrid Positioning System
        </h1>
      </div>
    </div>
  </div>
</div>

<div class="container main typography home">
  <div class="row">
    <div class="col-sm-8">
      {{ content | safe }}
      {% set maxPosts = collections.posts.length | min(3) %}
      <h2>Latest News</h2>
      {% set postslist = collections.posts | head(-3) %}
      {% include "postslist.njk" %}
    </div>
    <div class="col-sm-4">      
      <div class="twitter-wrapper">
        <script type="module" src="https://cdn.jsdelivr.net/npm/bsky-embed/dist/bsky-embed.es.js" async></script>
        <bsky-embed
          class="twitter-timeline"
          username="openhps.org"
          mode="light"
          limit="3"
        >
        </bsky-embed>
      </div>
    </div>
  </div>
</div>